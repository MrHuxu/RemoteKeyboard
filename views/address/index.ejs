<div class='container' id='main'>
  <h1>Remote Keyboard</h1><br />

  <h1 id='url'>...</h1><br />
  <button class='btn btn-default' id='copy' type='button' data-toggle="modal" data-target="#myModal"><strong>Copy to clipboard</strong></button>
  <br /><br /><br />

  <div>
    <button class='btn btn-primary btn-lg letter'><p>Q</p></button>
    <button class='btn btn-primary btn-lg letter'><p>W</p></button>
    <button class='btn btn-primary btn-lg letter'><p>E</p></button>
    <button class='btn btn-primary btn-lg letter'><p>R</p></button>
    <button class='btn btn-primary btn-lg letter'><p>T</p></button>
    <button class='btn btn-primary btn-lg letter'><p>Y</p></button>
    <button class='btn btn-primary btn-lg letter'><p>U</p></button>
    <button class='btn btn-primary btn-lg letter'><p>I</p></button>
    <button class='btn btn-primary btn-lg letter'><p>O</p></button>
    <button class='btn btn-primary btn-lg letter'><p>P</p></button>
    <button class='btn btn-info btn-lg letter'><p>-</p></button>
    <button class='btn btn-info btn-lg letter'><p>_</p></button>
    <button class='btn btn-info btn-lg letter'><p>.</p></button>
  </div><br />

  <div>
    <button class='btn btn-primary btn-lg letter'><p>A</p></button>
    <button class='btn btn-primary btn-lg letter'><p>S</p></button>
    <button class='btn btn-primary btn-lg letter'><p>D</p></button>
    <button class='btn btn-primary btn-lg letter'><p>F</p></button>
    <button class='btn btn-primary btn-lg letter'><p>G</p></button>
    <button class='btn btn-primary btn-lg letter'><p>H</p></button>
    <button class='btn btn-primary btn-lg letter'><p>J</p></button>
    <button class='btn btn-primary btn-lg letter'><p>K</p></button>
    <button class='btn btn-primary btn-lg letter'><p>L</p></button>
    <button class='btn btn-danger btn-lg' id='clear'><p>Clear</p></button>
    <button class='btn btn-danger btn-lg' id='back'><p>Backspace</p></button>
  </div><br />

  <div>
    <button class='btn btn-primary btn-lg letter'><p>Z</p></button>
    <button class='btn btn-primary btn-lg letter'><p>X</p></button>
    <button class='btn btn-primary btn-lg letter'><p>C</p></button>
    <button class='btn btn-primary btn-lg letter'><p>V</p></button>
    <button class='btn btn-primary btn-lg letter'><p>B</p></button>
    <button class='btn btn-primary btn-lg letter'><p>N</p></button>
    <button class='btn btn-primary btn-lg letter'><p>M</p></button>
    <button class='btn btn-success btn-lg letter'><p>.com</p></button>
    <button class='btn btn-success btn-lg letter'><p>.cn</p></button>
    <button class='btn btn-success btn-lg letter'><p>.org</p></button>
    <button class='btn btn-success btn-lg letter'><p>.tv</p></button>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">URL Copied</h4>
      </div>
      <div class="modal-body">
        <h3 id='modalMessage'></h3>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>